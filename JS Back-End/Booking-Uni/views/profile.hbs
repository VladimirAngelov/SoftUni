<div id="container">
    <nav>
        {{#if user.isAuthenticated}}
            <div class="left-container">
                <ul>
                    <li><a href="/">Home</a></li>
                    <li><a href="/hotel/create">Add +</a></li>
                </ul>
            </div>
            <div class="right-container">
                <a href="/auth/profile" class="log-out">{{user.username}}</a>
                <a href="/auth/logout" class="log-out">Logout</a>
            </div>
        {{else}}
            <div class="left-container">
                <ul>
                    <li><a href="/">Home</a></li>
                    <li><a href="/auth/login">Login</a></li>
                    <li><a href="/auth/register">Register</a></li>
                </ul>
            </div>
        {{/if}}
    </nav>
    {{>notification}}
    <section id="viewhotelDetails">
        <div class="profile"><img src="/img/profile.png" alt="default user">
            <h3>User Info:</h3>
            <div class="flex">
                <p>Username: </p>
                <p>{{username}}</p>
            </div>
            <div class="flex">
                <p>Email: </p>
                <p>{{email}}</p>
            </div>
            <div class="flex">
                <p>Reservations: </p>
                <p>
                    {{#each bookedHotels}}
                        <span>{{this.name}}, </span>
                    {{/each}}
                </p>
            </div>
        </div>
    </section>

    <footer>@SoftUni - JS Back-end - BookingUni 2020</footer>
</div>