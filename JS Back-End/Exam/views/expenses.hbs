<main>
    <section class="actions">
        <form action="/expenses/refill" method="post">
            <h2>Salary time? Refill your account amount.</h2>
            <input type="text" name="refill" id="refill-amount">
            <button type="submit">Refill</button>
        </form>
        <div>
            <h2>New expense comming up?</h2>
            <a href="/expenses/create">Add it now</a>
        </div>
    </section>

    <hr class="separator">
    {{#if currentUser.expenses}}
        <table class="expenses">
            <thead>
            <tr>
                <th>Merchant</th>
                <th>Amount</th>
                <th>Category</th>
                <th>Description</th>
            </tr>

            </thead>
            <tbody>
            {{#each currentUser.expenses}}
                {{> expense}}
            {{/each}}
            </tbody>
        </table>
    {{else}}
        <h1 class="no-expenses">No expenses founded so far.. <span>GOOD JOB!</span></h1>
    {{/if}}

</main>