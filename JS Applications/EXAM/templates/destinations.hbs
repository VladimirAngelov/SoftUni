{{> header}}
<section id="viewMydestinations">
    {{#if myDestinations}}
        <h3>Your destinations</h3>
    {{else}}
        <h3>You don't have any destinations.</h3>
    {{/if}}
    {{#each myDestinations}}
        <div class="destination-ticket">
            <div class="destination-left">
                <img src="{{imgUrl}}"
                     alt="">
            </div>
            <div class="destination-right">
                <div>
                    <h3>{{destination}}</h3><span>{{departureDate}}</span>
                </div>
                <div>
                    to {{city}}
                </div>
                <p>{{duration}} days </p>
                <a href="" data-id="{{key}}" id="delete-button" class="remove">REMOVE</a>
                <a href="/details/{{key}}" class="details">Details</a>
            </div>
        </div>
    {{/each}}
</section>
{{> footer}}